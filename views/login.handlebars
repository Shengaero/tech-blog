<div class="card my-4">
  <h5 class="card-header bg-primary text-white">Login</h5>
  <div class="card-body">
    <form id="loginForm">
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="inputUsername">Username</label>
        <div class="col-sm-10">
          <input class="form-control" id="inputUsername" type="text" autocomplete="username">
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="inputPassword">Password</label>
        <div class="col-sm-10">
          <input class="form-control" id="inputPassword" type="password" autocomplete="current-password">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
