<div class="card my-4">
  <h5 class="card-header text-bg-primary">Login</h5>
  <div class="card-body">
    <div class="mb-3 mx-4 invisible text-danger fw-bold" id="incorrectUserPass"></div>
    <form class="needs-validation" id="loginForm" novalidate>
      {{> form-username}}
      {{> form-password}}
      <button type="submit" class="btn btn-primary mx-4">Login</button>
    </form>
  </div>
  <div class="card-footer">
    <a class="text-decoration-none" href="/register">Register</a>
  </div>
</div>
