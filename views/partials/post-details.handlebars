<section class="card container-fluid my-4 px-0">
  <div class="d-flex flex-column flex-sm-row justify-content-between card-header bg-primary p-2 my-0">
    <h5 class="card-title float-start my-auto">
      <a class="text-white text-decoration-none" href="/posts/{{id}}">{{title}}</a>
    </h5>
    <div class="text-white float-start float-sm-end">{{date}}</div>
  </div>
  <div class="d-flex flex-column card-body p-0">
    <p class="card-text px-2 py-3">
      {{content}}
    </p>
  </div>
</section>
